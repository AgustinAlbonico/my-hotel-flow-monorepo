# ========================================
# MyHotelFlow - Variables de Entorno (Example)
# ========================================
# Copia este archivo a .env y ajusta los valores seg√∫n tu entorno

# ----------------------------------------
# General
# ----------------------------------------
NODE_ENV=development
PORT=3000
API_PREFIX=api

# ----------------------------------------
# Database (PostgreSQL)
# ----------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=myhotelflow
DB_SYNCHRONIZE=true
DB_LOGGING=false

# ----------------------------------------
# Redis (Cache)
# ----------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ----------------------------------------
# JWT Authentication
# ----------------------------------------
JWT_SECRET=change-this-secret-key-min-32-chars-long-for-production
JWT_ACCESS_EXPIRATION=1d
JWT_REFRESH_EXPIRATION=7d

# ----------------------------------------
# Argon2 (Password Hashing)
# ----------------------------------------
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=4

# ----------------------------------------
# Security
# ----------------------------------------
LOCKOUT_THRESHOLD=5
LOCKOUT_DURATION=900000
PASSWORD_RESET_EXPIRATION=3600000
PERMISSIONS_CACHE_TTL=900
CORS_ORIGIN=http://localhost:5173

# ----------------------------------------
# Email (Development - MailHog)
# ----------------------------------------
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_FROM="MyHotelFlow <no-reply@myhotelflow.example>"

# ----------------------------------------
# Application URLs
# ----------------------------------------
APP_URL=https://app.myhotelflow.example
SUPPORT_EMAIL=soporte@myhotelflow.example
ASSET_BASE_URL=

# ----------------------------------------
# Twilio (SMS - Optional)
# ----------------------------------------
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_FROM=+1234567890

# ----------------------------------------
# MercadoPago (Payment Gateway)
# ----------------------------------------
MERCADOPAGO_ACCESS_TOKEN=your_access_token_here
MERCADOPAGO_PUBLIC_KEY=your_public_key_here
MERCADOPAGO_BACK_URL=http://localhost:5173
MERCADOPAGO_NOTIFICATION_URL=http://localhost:3000/api/webhooks/mercadopago

# ----------------------------------------
# Frontend (Vite)
# ----------------------------------------
VITE_API_URL=http://localhost:3000/api/v1
VITE_APP_NAME=MyHotelFlow
VITE_JWT_TOKEN_KEY=myhotelflow_access_token
VITE_JWT_REFRESH_TOKEN_KEY=myhotelflow_refresh_token
